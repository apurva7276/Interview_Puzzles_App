<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/userWelcome"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Welcome"
        android:textAlignment="center"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnSmartContest"
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:layout_below="@+id/userWelcome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round_shape"
        android:text="Let's take smart contest"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnRandomPuzzle"
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btnSmartContest"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round_shape"
        android:textAllCaps="false"
        android:text="Solve Random Puzzle"
        android:textSize="20sp" />

</RelativeLayout>